# CoinSniper Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
API_KEY=your-super-secret-api-key-here

# Database
MONGODB_URI=mongodb://localhost:27017/coinsniper
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain & Axiom
AXIOM_API_KEY=your-axiom-api-key-here
AXIOM_BASE_URL=https://api.axiom.xyz

# Ethereum RPC (fallback)
ETHEREUM_RPC=https://eth-mainnet.alchemyapi.io/v2/your-api-key
BSC_RPC=https://bsc-dataseed.binance.org
POLYGON_RPC=https://polygon-rpc.com
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
BASE_RPC=https://mainnet.base.org

# Trading Wallets (comma-separated private keys)
WALLET_PRIVATE_KEYS=0x1234567890abcdef,0xabcdef1234567890

# Risk Management
MAX_PORTFOLIO_RISK=0.05
MAX_DAILY_LOSS=0.10
MAX_DRAWDOWN=0.25
POSITION_SIZING=KELLY
STOP_LOSS_STRATEGY=TRAILING

# Notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
DISCORD_WEBHOOK_URL=your-discord-webhook-url-here

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook (optional)
WEBHOOK_URL=https://your-webhook-url.com/coinsniper
WEBHOOK_SECRET=your-webhook-secret

# Security
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
AI_ANALYSIS_ENABLED=true
RISK_MANAGEMENT_ENABLED=true
NOTIFICATIONS_ENABLED=true
MULTI_WALLET_ENABLED=true
